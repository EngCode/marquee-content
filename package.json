{
  "name": "marquee-content",
  "version": "3.0.0",
  "description": "Class for creating the running content effect, also known as a marquee or ticker.",
  "author": "ux-ui.pro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ux-ui-pro/marquee-content.git"
  },
  "bugs": {
    "url": "https://github.com/ux-ui-pro/marquee-content/issues"
  },
  "main": "dist/index.js",
  "source": "dist/index.html",
  "module": "dist/index.module.js",
  "targets": {
    "main": {
      "source": "src/index.js"
    },
    "module": {
      "source": "src/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist .parcel-cache",
    "serve": "parcel src/index.html --dist-dir dist --cache-dir .parcel --no-source-maps --open",
    "build": "yarn clean && parcel build",
    "lint:js": "eslint --ext .js",
    "lintfix": "yarn lint:js --fix"
  },
  "devDependencies": {
    "eslint": "^7.32.0 || ^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "parcel": "^2.10.2",
    "postcss-html": "^1.5.0"
  },
  "keywords": [
    "marquee",
    "scroller",
    "animation",
    "ticker",
    "reel",
    "running text",
    "scrolling text",
    "ui",
    "custom",
    "clones",
    "filler",
    "css",
    "effects",
    "gsap"
  ]
}
